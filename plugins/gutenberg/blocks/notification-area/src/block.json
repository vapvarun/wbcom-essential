{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "wbcom-essential/notification-area",
	"version": "1.0.0",
	"title": "Header Notification Area",
	"category": "starter-header",
	"icon": "bell",
	"description": "Header notification area with search, cart, messages, notifications, and user menu with responsive visibility controls.",
	"keywords": [ "notification", "header", "search", "cart", "messages", "user", "menu", "buddypress", "woocommerce" ],
	"textdomain": "wbcom-essential",
	"example": {},
	"attributes": {
		"showSearchDesktop": {
			"type": "boolean",
			"default": true
		},
		"showSearchTablet": {
			"type": "boolean",
			"default": true
		},
		"showSearchMobile": {
			"type": "boolean",
			"default": true
		},
		"showCartDesktop": {
			"type": "boolean",
			"default": true
		},
		"showCartTablet": {
			"type": "boolean",
			"default": true
		},
		"showCartMobile": {
			"type": "boolean",
			"default": true
		},
		"showMessagesDesktop": {
			"type": "boolean",
			"default": true
		},
		"showMessagesTablet": {
			"type": "boolean",
			"default": true
		},
		"showMessagesMobile": {
			"type": "boolean",
			"default": true
		},
		"showNotificationsDesktop": {
			"type": "boolean",
			"default": true
		},
		"showNotificationsTablet": {
			"type": "boolean",
			"default": true
		},
		"showNotificationsMobile": {
			"type": "boolean",
			"default": true
		},
		"showAvatarDesktop": {
			"type": "boolean",
			"default": true
		},
		"showAvatarTablet": {
			"type": "boolean",
			"default": true
		},
		"showAvatarMobile": {
			"type": "boolean",
			"default": true
		},
		"showUserName": {
			"type": "boolean",
			"default": true
		},
		"iconColor": {
			"type": "string",
			"default": "#122B46"
		},
		"iconHoverColor": {
			"type": "string",
			"default": "#007CFF"
		},
		"userNameColor": {
			"type": "string",
			"default": "#122B46"
		},
		"userNameHoverColor": {
			"type": "string",
			"default": "#007CFF"
		},
		"badgeColor": {
			"type": "string",
			"default": "#EF3E46"
		},
		"badgeTextColor": {
			"type": "string",
			"default": "#ffffff"
		},
		"dropdownBgColor": {
			"type": "string",
			"default": "#ffffff"
		},
		"dropdownBorderColor": {
			"type": "string",
			"default": "#e3e3e3"
		},
		"dropdownLinkColor": {
			"type": "string",
			"default": "#122B46"
		},
		"dropdownLinkHoverColor": {
			"type": "string",
			"default": "#007CFF"
		},
		"dropdownLinkHoverBg": {
			"type": "string",
			"default": "#f5f5f5"
		},
		"iconSize": {
			"type": "number",
			"default": 20
		},
		"avatarSize": {
			"type": "number",
			"default": 36
		},
		"itemGap": {
			"type": "number",
			"default": 16
		},
		"lineHeight": {
			"type": "number",
			"default": 90
		},
		"counterTopSpace": {
			"type": "number",
			"default": 20
		}
	},
	"supports": {
		"html": false,
		"align": [ "left", "center", "right" ],
		"spacing": {
			"margin": true,
			"padding": true
		}
	},
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"viewScript": "file:./view.js",
	"render": "file:./render.php"
}
