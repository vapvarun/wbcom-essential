{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "wbcom-essential/team-carousel",
	"version": "1.0.0",
	"title": "Team Carousel",
	"category": "wbcom-essential",
	"icon": "groups",
	"description": "Display team members in an interactive carousel.",
	"keywords": [ "team", "carousel", "members", "staff", "people", "slider" ],
	"supports": {
		"html": false,
		"align": [ "wide", "full" ]
	},
	"attributes": {
		"members": {
			"type": "array",
			"default": [
				{
					"id": 1,
					"imageId": 0,
					"imageUrl": "",
					"name": "John Doe",
					"role": "CEO & Founder",
					"linkUrl": ""
				},
				{
					"id": 2,
					"imageId": 0,
					"imageUrl": "",
					"name": "Jane Smith",
					"role": "Lead Designer",
					"linkUrl": ""
				},
				{
					"id": 3,
					"imageId": 0,
					"imageUrl": "",
					"name": "Mike Johnson",
					"role": "Developer",
					"linkUrl": ""
				}
			]
		},
		"slidesPerView": {
			"type": "number",
			"default": 3
		},
		"slidesPerViewTablet": {
			"type": "number",
			"default": 2
		},
		"slidesPerViewMobile": {
			"type": "number",
			"default": 1
		},
		"spaceBetween": {
			"type": "number",
			"default": 30
		},
		"showNavigation": {
			"type": "boolean",
			"default": true
		},
		"showPagination": {
			"type": "boolean",
			"default": true
		},
		"loop": {
			"type": "boolean",
			"default": true
		},
		"autoplay": {
			"type": "boolean",
			"default": false
		},
		"autoplayDelay": {
			"type": "number",
			"default": 5000
		},
		"cardBackground": {
			"type": "string",
			"default": "#ffffff"
		},
		"cardBorderRadius": {
			"type": "number",
			"default": 8
		},
		"nameColor": {
			"type": "string",
			"default": "#1a202c"
		},
		"roleColor": {
			"type": "string",
			"default": "#718096"
		},
		"navColor": {
			"type": "string",
			"default": "#3182ce"
		}
	},
	"textdomain": "wbcom-essential",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"viewScript": "file:./view.js",
	"render": "file:./render.php"
}
