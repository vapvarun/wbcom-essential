{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "wbcom-essential/text-rotator",
	"version": "1.0.0",
	"title": "Text Rotator",
	"category": "wbcom-essential",
	"icon": "editor-textcolor",
	"description": "Animated rotating text with prefix and suffix.",
	"keywords": [ "text", "rotator", "animation", "typing", "headline", "animated" ],
	"textdomain": "wbcom-essential",
	"example": {},
	"attributes": {
		"prefixText": {
			"type": "string",
			"default": "We are"
		},
		"rotatingTexts": {
			"type": "array",
			"default": [
				{ "id": "text-1", "text": "Creative" },
				{ "id": "text-2", "text": "Innovative" },
				{ "id": "text-3", "text": "Passionate" }
			]
		},
		"suffixText": {
			"type": "string",
			"default": "developers"
		},
		"htmlTag": {
			"type": "string",
			"default": "h2"
		},
		"textAlign": {
			"type": "string",
			"default": "center"
		},
		"animation": {
			"type": "string",
			"default": "fadeIn"
		},
		"duration": {
			"type": "number",
			"default": 3000
		},
		"showCursor": {
			"type": "boolean",
			"default": true
		},
		"cursorChar": {
			"type": "string",
			"default": "|"
		},
		"loopCount": {
			"type": "number",
			"default": 0
		},
		"textColor": {
			"type": "string",
			"default": ""
		},
		"rotatingTextColor": {
			"type": "string",
			"default": "#3182ce"
		},
		"rotatingTextBg": {
			"type": "string",
			"default": ""
		},
		"prefixColor": {
			"type": "string",
			"default": ""
		},
		"suffixColor": {
			"type": "string",
			"default": ""
		}
	},
	"supports": {
		"html": false,
		"align": [ "wide", "full" ],
		"spacing": {
			"margin": true,
			"padding": true
		},
		"typography": {
			"fontSize": true,
			"lineHeight": true
		}
	},
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"viewScript": "file:./view.js",
	"render": "file:./render.php"
}
