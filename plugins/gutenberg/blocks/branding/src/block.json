{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 2,
	"name": "wbcom-essential/branding",
	"version": "1.0.0",
	"title": "Branding",
	"category": "wbcom-essential",
	"description": "Display site branding with title or logo",
	"icon": "admin-site",
	"textdomain": "wbcom-essential",
	"attributes": {
		"brandingType": {
			"type": "string",
			"default": "title"
		},
		"alignment": {
			"type": "string",
			"default": ""
		},
		"titleColor": {
			"type": "string",
			"default": "#333333"
		},
		"titleHoverColor": {
			"type": "string",
			"default": "#333333"
		},
		"descriptionColor": {
			"type": "string",
			"default": "#333333"
		},
		"titlePadding": {
			"type": "object",
			"default": {
				"top": "1em",
				"right": "1em",
				"bottom": "1em",
				"left": "1em"
			}
		},
		"descriptionPadding": {
			"type": "object",
			"default": {
				"top": "1em",
				"right": "1em",
				"bottom": "1em",
				"left": "1em"
			}
		},
		"logoPadding": {
			"type": "object",
			"default": {
				"top": "1em",
				"right": "1em",
				"bottom": "1em",
				"left": "1em"
			}
		},
		"logoWidth": {
			"type": "string",
			"default": "auto"
		},
		"logoHeight": {
			"type": "string",
			"default": "auto"
		},
		"titleTypography": {
			"type": "object",
			"default": {
				"fontFamily": "",
				"fontSize": "",
				"fontWeight": "",
				"lineHeight": "",
				"letterSpacing": "",
				"textTransform": "",
				"textDecoration": ""
			}
		},
		"border": {
			"type": "object",
			"default": {
				"width": "1px",
				"style": "solid",
				"color": "#000000"
			}
		},
		"borderRadius": {
			"type": "object",
			"default": {
				"top": "0px",
				"right": "0px",
				"bottom": "0px",
				"left": "0px"
			}
		}
	},
	"supports": {
		"align": [ "left", "center", "right" ],
		"color": {
			"text": true,
			"background": true
		},
		"spacing": {
			"margin": true,
			"padding": true
		}
	},
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css"
}